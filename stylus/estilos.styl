@import "normalize.styl"

//iconos
@import "fonts.styl"


gris_claro = #818181
gris_oscuro = #333333
rojo = #BD255B;

body
	font-family 'Varela Round', sans-serif
	font-size 16px

figure
	margin 0

img
	vertical-align top

a
	text-decoration none

//buttons
.button-menu
	color gris_oscuro
	left 0.5em
	margin-top -10px
	position absolute
	top 50%

//ocss classes

.absolute
	position absolute

.relative
	position relative

.padding
	padding 1em

.center-block
	margin 0 auto

.center-text
	text-align center

.right-text
	text-align right

.border-bottom
	border-bottom 1px solid gris_claro

.container
	padding 1.4rem
	font-size 0
	text-align center
.menu
	display none

.header
	height 3.5em	
	.title
		font-size 1.1em
		line-height 3.5em
		margin 0
		text-align center


.name
	color gris_oscuro

.author
	color gris_claro



.song
	display inline-block
	font-size 1rem
	margin-bottom 1rem
	margin-right 1rem
	text-align left
	width 8rem
	&:nth-child(even)
		margin-right 0

	p
		margin 0.5em 0

//playinh
.action
	color white
	font-size 1.2em
	margin-right 0.5em

	&:last-child
		margin-right 0
	&.gray
		color gris_claro

.actions 
	background rgba(black,0.3)
	bottom 0
	left 0
	position absolute
	right 0



.playing
	&.small
		width 20em

.play
	padding 1em 0

.progress 
	margin 2em 0
	.circle
		background-color gris_oscuro
		border-radius 50%
		height 10px
		right 0
		top -2px
		width 10px
	.min
	.max
		font-size 0.8em;
		top -5px

	.min
		left 0
	.max
		right 0
	.total
		background-color gris_claro
		border-radius 5px
		height 5px
		margin 0 auto
		width 75%
	.state
		background-color rojo
		border-radius 5px
		height 5px;
		width  30%
		

